{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "editorconfig"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "editorconfig/editorconfig": ["error"],
    "prettier/prettier": ["error"]
  }
}
